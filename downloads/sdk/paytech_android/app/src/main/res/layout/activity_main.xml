<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="test.sample.paytech.paytech_sdk_test.MainActivity">

    <Button
        android:id="@+id/buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy Now"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buy"
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="533dp" >
        <RadioButton
            android:id="@+id/radioButton_full_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Screen"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="428dp" />

        <RadioButton
            android:id="@+id/radioButton_floating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Floting"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="428dp" />
    </RadioGroup>



</androidx.constraintlayout.widget.ConstraintLayout>
